<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15dp</item>

    </style>

    <style name="Footer">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="DetailText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:color">@color/colorBlack</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextBox">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:color">@color/colorBlack</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:height">25dp</item>
    </style>

    <style name="Notification">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:padding">25dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
