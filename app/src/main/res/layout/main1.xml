<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivImageViewer"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="false"
            android:background="#ffffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOpenDevice"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Open"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnCloseDevice"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@id/btnOpenDevice"
                android:text="Close"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnGetImage"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btnCloseDevice"
                android:text="GetImage"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnGetImageQuality"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btnGetImage"
                android:text="GetImageQuality"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnGet"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btnGetImageQuality"
                android:text="Get"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/editUserID"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#63a7ff"
            android:editable="true"
            android:inputType="number"
            android:singleLine="false"
            android:text="Template" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCreateANSITemp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="CreateANSITemplate"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnCreateISOTemp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btnCreateANSITemp"
                android:text="CreateISOTemplate"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
